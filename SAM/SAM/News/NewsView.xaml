<Page
    x:Class="SAM.News.NewsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SAM.News"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Width="720" Orientation="Vertical">
        <Button
            Width="48"
            Height="48"
            Margin="0,0,0,4"
            HorizontalAlignment="Right"
            Click="{x:Bind Path=ViewModel.onDeactivate}"
            Content="X" />
        <Grid Height="800" HorizontalAlignment="Stretch">
            <WebView
                x:Name="Content"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                ContentLoading="WebView_ContentLoading"
                NavigationFailed="WebView_NavigationFailed"
                NavigationStarting="WebView_NavigationStarting"
                Source="{x:Bind Path=ViewModel.ActiveNewsArticle.Url, Mode=OneWay}"
                Visibility="Collapsed" />
            <ProgressRing
                x:Name="Progress"
                Width="48"
                Height="48"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                IsActive="True" />
        </Grid>
    </StackPanel>
</Page>
