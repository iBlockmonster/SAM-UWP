            </Button>
            <Button
                Width="80"
                Height="80"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="8" >
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/MirrorCacheImages/HotelAmenities.png"/>
