            Margin="30,37,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Orientation="Horizontal">
            <Button
                Width="80"
                Height="80"
                Margin="12,12,12,12"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="8" >
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/MenuButtonImages/Bebo.png"/>
                </Button.Background>
            </Button>
            <Button
                Width="80"
                Height="80"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
