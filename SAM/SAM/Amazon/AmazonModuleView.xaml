<UserControl
    x:Class="SAM.Amazon.AmazonModuleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SAM.Amazon"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid
        x:Name="AmazonGrid"
        Width="720"
        Height="400"
        Background="{ThemeResource SystemControlAcrylicElementBrush}"
        BorderBrush="{ThemeResource SystemControlBackgroundListMediumRevealBorderBrush}"
        BorderThickness="2,2,2,2"
        CornerRadius="4">
        <Button
            Margin="6,6,6,6"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Click="{x:Bind Path=ViewModel.OnActivate, Mode=OneWay}"
            Style="{StaticResource HitboxButton}">
            <Image
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Source="/Assets/Amazon/Amazon-Card.jpg"
                Stretch="Uniform" />
        </Button>
    </Grid>
</UserControl>
