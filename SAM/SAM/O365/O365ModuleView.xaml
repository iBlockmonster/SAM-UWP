<UserControl
    x:Class="SAM.O365.O365ModuleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SAM.O365"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="340">

    <Grid
        x:Name="O365Grid"
        Width="340"
        Height="400"
        Background="{ThemeResource SystemControlAcrylicElementBrush}"
        BorderBrush="{ThemeResource SystemControlBackgroundListMediumRevealBorderBrush}"
        BorderThickness="2,2,2,2"
        CornerRadius="4">
        <Button
            Margin="6,6,6,6"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Click="{x:Bind Path=ViewModel.OnActivate, Mode=OneWay}"
            Style="{StaticResource HitboxButton}" Height="400">
            <Image
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Source="/Assets/O365/Office365-Card.jpg"
                Stretch="Fill" />
        </Button>
    </Grid>
</UserControl>
