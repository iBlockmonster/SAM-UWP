<UserControl
    x:Class="SAM.UserControls.HotelServicesUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SAM.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="2000"
    d:DesignWidth="720"
    mc:Ignorable="d">

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="Auto" MinHeight="0" />
            <RowDefinition Height="Auto" MinHeight="0" />
            <RowDefinition Height="Auto" MinHeight="0" />
            <RowDefinition Height="Auto" MinHeight="0" />
        </Grid.RowDefinitions>
        <Grid
            x:Name="TopNavGrid"
            Grid.RowSpan="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150*" />
                <ColumnDefinition Width="340*" />
                <ColumnDefinition Width="150*" />
            </Grid.ColumnDefinitions>
            <Grid
                x:Name="TimeGrid"
                Grid.ColumnSpan="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <Rectangle Margin="0,0,40,0" Fill="{ThemeResource SystemControlAcrylicElementBrush}" />
            </Grid>
            <Grid
                x:Name="LogoGrid"
                Grid.Column="1"
                Grid.ColumnSpan="1"
                Margin="0,0,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <Rectangle
                    Margin="0,0,40,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Fill="{ThemeResource SystemControlAcrylicElementBrush}" />
            </Grid>
            <Grid
                x:Name="WeatherGrid"
                Grid.Column="3"
                Grid.ColumnSpan="1"
                Margin="0,0,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <Rectangle
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Fill="{ThemeResource SystemControlAcrylicElementBrush}" />
            </Grid>

        </Grid>
        <Grid
            x:Name="WelcomeGrid"
            Grid.Row="1"
            Margin="0,40,0,0">
            <Image
                Margin="0,0,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Source="/Assets/MirrorCacheImages/WelcomeCard.png" />
        </Grid>
        <Grid
            x:Name="StepsGrid"
            Grid.Row="2"
            Margin="0,40,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <Image
                Margin="0,0,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Source="/Assets/MirrorCacheImages/step-1.png"
                Stretch="Fill" />
        </Grid>
        <Grid
            x:Name="ServicesGrid"
            Grid.Row="3"
            Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="22*" />
                <ColumnDefinition Width="23*" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Margin="0,0,20,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <Image
                    Margin="0,0,0,40"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Source="/Assets/MirrorCacheImages/card13.png" />
                <Image Source="/Assets/MirrorCacheImages/Spa.png" />
            </StackPanel>
            <StackPanel
                Grid.Column="1"
                Margin="0,0,20,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <Image Margin="0,0,0,40" Source="/Assets/MirrorCacheImages/PlayMusic.png" />
                <Image Source="/Assets/MirrorCacheImages/OrderCoffee.png" />
            </StackPanel>
        </Grid>
        <Grid
            x:Name="FooterGrid"
            Grid.Row="4"
            Grid.RowSpan="1"
            Margin="0,40,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="0" />
                <ColumnDefinition Width="Auto" MinWidth="0" />
                <ColumnDefinition Width="Auto" MinWidth="0" />
                <ColumnDefinition Width="Auto" MinWidth="0" />
            </Grid.ColumnDefinitions>
            <Grid
                Margin="0,0,40,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <Image
                    Margin="0,0,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Source="/Assets/MirrorCacheImages/HotelAmenities.png" />
            </Grid>
            <Grid Grid.Column="1" Margin="0,0,40,0">
                <Image
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Source="/Assets/MirrorCacheImages/ExploreLocalArea.png" />
            </Grid>
            <Grid Grid.Column="2" Margin="0,0,40,0">
                <Image
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Source="/Assets/MirrorCacheImages/DineOutOptions.png" />
            </Grid>
            <Grid Grid.Column="3">
                <Image
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Source="/Assets/MirrorCacheImages/CustomizeSettings.png" />
            </Grid>
        </Grid>

    </Grid>
</UserControl>
