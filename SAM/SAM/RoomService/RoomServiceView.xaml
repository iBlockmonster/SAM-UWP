<Page
    x:Class="SAM.RoomService.RoomServiceView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SAM.RoomService"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Width="720">
        <Button
            Width="48"
            Height="48"
            Margin="0,0,0,4"
            HorizontalAlignment="Right"
            Click="{x:Bind Path=ViewModel.onDeactivate}"
            Content="X" />
        <Image
            Margin="0,0,0,20"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Source="/Assets/OrderFoodImages/OrderTitle.png"
            Stretch="Uniform" />
        <Image Margin="0,0,0,20" Source="/Assets/OrderFoodImages/OrderItems.png" />
        <Image Source="/Assets/OrderFoodImages/MyOrder.png" />
    </StackPanel>
</Page>
